{
  "expo": {
    "name": "sentinel",
    "slug": "sentinel",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/sentinel-icon.png",
    "scheme": "sentinel",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.anonymous.sentinel",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/sentinel-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.sentinel",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_SETTINGS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_MICROPHONE",
        "android.permission.WAKE_LOCK",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/sentinel-icon.png",
      "output": "server"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/sentinel-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-background-task",
        {
          "backgroundModes": [
            "background-processing"
          ]
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow Sentinel to access your microphone to record audio evidence."
        }
      ],
      "expo-secure-store",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Sentinel to access your contacts to add them to your emergency circle."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Sentinel to access your camera to record evidence.",
          "microphonePermission": "Allow Sentinel to access your microphone to record audio evidence.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Sentinel to save videos to your photos.",
          "savePhotosPermission": "Allow Sentinel to save videos to your photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "149ae237-40de-4c01-8535-aeb659ca4222"
      },
      "apiUrl": "https://sentinel-app-delta.vercel.app"
    }
  }
}