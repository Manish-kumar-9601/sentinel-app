{
  "expo": {
    "name": "sentinel",
    "slug": "sentinel",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/sentinel-icon.png",
    "scheme": "sentinel",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/sentinel-icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAHBm7T74Sop85U-8sameaAMTTVUt350CI"
        }
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.sentinel",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
         "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/sentinel-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/sentinel-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-background-task",
        {
          "backgroundModes": ["background-processing"]
        }
      ],
     [
        "expo-audio",
        {
          "microphonePermission": "Allow Sentinel to access your microphone to record audio evidence."
        }
      ],
      "expo-secure-store",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Sentinel to access your contacts to add them to your emergency circle."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Sentinel to access your camera to record evidence.",
          "microphonePermission": "Allow Sentinel to access your microphone to record audio evidence.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Sentinel to save videos to your photos.",
          "savePhotosPermission": "Allow Sentinel to save videos to your photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "149ae237-40de-4c01-8535-aeb659ca4222"
      }
    }
  }
}
